<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_6"
    android:layout_marginLeft="@dimen/padding_10"
    android:layout_marginRight="@dimen/padding_10"
    android:layout_marginTop="@dimen/padding_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/note_item_list_title_tv"
            style="@style/text_view_20_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="This is a Title" />

        <TextView
            android:id="@+id/note_item_list_description_tv"
            style="@style/text_view_14_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_6"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="Description" />

    </LinearLayout>

</android.support.v7.widget.CardView>